{
  "name": "TabShot",
  "version": "1.0.2",
  "description": "Makes a screenshot of the visible part.",
  "background": {
    "persistent": false,
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Screenshot!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "manifest_version": 2
}