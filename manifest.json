{
  "name": "TabShot",
  "version": "1.0.2",
  "description": "Make a screnshot of a web page.",
  "background": {
    "persistent": false,
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup":  "drop-down.html",
    "default_title": "Make screenshot!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
	"storage",
	"declarativeWebRequest"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'"
} 